{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "./src/renderer/src/*.d.ts",
    "./src/renderer/src/**/*",
    "./src/renderer/src/**/*.{ts,tsx}",
    "./src/preload/*.d.ts",
    "./src/shared/**/*.ts"
  ],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "./src/renderer/src/*"
      ]
    }
  }
}
